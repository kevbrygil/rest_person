{
    'parser': 'babel-eslint',
    'env': {
        'mongo': true,
        'node': true,
        'es6': true
    },
    'extends': 'eslint:recommended',
    'rules': {
      'indent': [
            'error',
            4
        ],
        'quotes': [
            'error',
            'single'
        ],
    },
    'globals': {
        '__quiet': false,
        'slaveOk': false,
        'collection': false,
        'DBQuery': false,
        'BinData': false,
        'NumberLong': false,
        'tojson': false
    },
    'parserOptions': {
        'sourceType': 'module'
    }
}
